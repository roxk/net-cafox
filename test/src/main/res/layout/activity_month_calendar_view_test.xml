<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<!-- Calendar -->
	<net.cafox.widget.MonthCalendarView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/calendar_view"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal">

		<!-- Year -->
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:id="@+id/year"
			android:gravity="center"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:id="@+id/month"
			android:gravity="center"
			android:textSize="16sp"
			android:textColor="@android:color/black"/>

	</LinearLayout>

	<!-- Get selected day -->
	<TextView
		android:layout_width="112dp"
		android:layout_height="48dp"
		android:gravity="center"
		android:id="@+id/get_selected"
		android:textSize="16sp"
		android:textColor="?attr/colorPrimary"
		android:text="@string/activity_month_calendar_view_test_get_selected"/>

	<!-- Previous month -->
	<TextView
		android:layout_width="112dp"
		android:layout_height="48dp"
		android:gravity="center"
		android:id="@+id/previous_month"
		android:textSize="16sp"
		android:textColor="?attr/colorPrimary"
		android:text="@string/activity_month_calendar_view_test_previous_month"/>

	<!-- Next month -->
	<TextView
		android:layout_width="112dp"
		android:layout_height="48dp"
		android:gravity="center"
		android:id="@+id/next_month"
		android:textSize="16sp"
		android:textColor="?attr/colorPrimary"
		android:text="@string/activity_month_calendar_view_test_next_month"/>

	<!-- Next month -->
	<TextView
		android:layout_width="112dp"
		android:layout_height="48dp"
		android:gravity="center"
		android:id="@+id/select_today"
		android:textSize="16sp"
		android:textColor="?attr/colorPrimary"
		android:text="@string/activity_month_calendar_view_test_select_today"/>

</LinearLayout>